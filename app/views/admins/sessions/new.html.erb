<div class="col mx-auto" style="width: 500px;">
      <div style="text-align: center; border: solid #ffbf7f;border-radius: 20px; margin-top: 10px;">
        <h2>管理者ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
              <p><strong>管理者名</strong></p>
              <%= f.text_field :nickname, autofocus: true,placeholder: "例：ごち", autocomplete: "nickname" %>
          </div>

          <div class="field">
            <p><strong>メールアドレス</strong></p>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <p><strong>パスワード</strong></p>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

       <div class="actions">
         <%= f.submit "ログイン", class: 'btn btn-warning' %>
       </div>
       <% end %>
    </div>
</div>
